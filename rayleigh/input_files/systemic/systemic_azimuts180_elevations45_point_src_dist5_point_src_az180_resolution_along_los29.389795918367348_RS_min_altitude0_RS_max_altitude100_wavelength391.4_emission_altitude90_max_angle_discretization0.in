alt_map_radius 100	#in km
alt_map_N_bins_max 100000
alt_map_resolution 1	# en km. Minimum 1arcsec (31m)
ground_emission_radius 0	# in km. Put 0 if you don't want the ground emission
ground_N_bins_max 5000
