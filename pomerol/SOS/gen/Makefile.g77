###################################
$(BIB)/SOS_AEROSOLS.o:$(SRC)/SOS_AEROSOLS.F $(DEP)
	@echo "------------> Compilation de $@"
	@$(FF) $(CCOPTS) $(DEBUG) -c $(SRC)/SOS_AEROSOLS.F -o $@ $(CFLAGS) -I$(NCL)

